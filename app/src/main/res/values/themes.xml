<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JouJonaApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primaryBackgroundColor</item>
         <item name="android:background">@color/primaryBackgroundColor</item>
         <item name="android:textColor">@color/letterColor</item>
         <item name="fontFamily">@font/siemens_sans_bold</item>
    </style>

    <style name="regular_16_text">
        <item name="fontFamily">@font/siemens_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">19dp</item>
        <item name="android:textColor">@color/letterColor</item>
    </style>

    <style name="regular_18_text">
        <item name="fontFamily">@font/siemens_sans_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">21dp</item>
        <item name="android:textColor">@color/letterColor</item>
    </style>

    <style name="regular_40_text">
        <item name="fontFamily">@font/siemens_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">40sp</item>
        <item name="android:lineHeight">19dp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="Theme.JouJonaApp" parent="Base.Theme.JouJonaApp" />



    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog">
    </style>

    <style name="BaseBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>
    <style name="BottomSheet" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet</item>
    </style>

</resources>