<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.JouJonaApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/primaryBackgroundColor</item>
         <item name="android:background">@color/primaryBackgroundColor</item>
         <item name="android:textColor">@color/letterColor</item>
         <item name="fontFamily">@font/siemens_sans_bold</item>
    </style>

    <style name="regular_16_text">
        <item name="fontFamily">@font/siemens_sans_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineHeight">19dp</item>
        <item name="android:textColor">@color/letterColor</item>
    </style>

    <style name="regular_18_text">
        <item name="fontFamily">@font/siemens_sans_bold</item>
        <item name="fontWeight">700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineHeight">21dp</item>
        <item name="android:textColor">@color/letterColor</item>
    </style>


    <style name="Theme.JouJonaApp" parent="Base.Theme.JouJonaApp" />
</resources>